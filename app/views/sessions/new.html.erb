<h1 style="text-align:center;">Log In</h1>

<div style="text-align:center;">
<%= form_tag login_path do %>
    <%= label_tag "Username " %><br>
    <%= text_field_tag :username %><br>
    <%= label_tag "Password " %><br>
    <%= password_field_tag :password %><br>
    <%= submit_tag "Submit" %>
<% end %>
<% if flash[:errors] %>
    <%= flash[:errors] %>
<% end %>
</div>
